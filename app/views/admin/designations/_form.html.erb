
<%# Renders a partial which is used to create a new designation %>

<%= form_for([:admin, @designation], :html => {:id=>"form_designation", :class=>"mb-0 form-horizontal", :role => "form", :method => (@designation.new_record? ? :post : :put), :remote=>true}) do |f| %>

  <div class="modal-body">

    <%= @designation.errors[:base].to_sentence %>

    <%= hidden_field_tag :faction, @designation.new_record? ? admin_designations_path : admin_designations_path(@designation) %>
    <%= hidden_field_tag :fmethod, @designation.new_record? ? "POST" : "PUT" %>

    <div class="form-inputs">


      <!-- Title (string) -->
      <%= render :partial=>"field", :locals=>{:object=>@designation,
                                              :object_name=>'designation',
                                              :field_name=>'title',
                                              :display_name=>'Title',
                                              :field_type=>'string',
                                              :input_type=>'text',
                                              :required=>true,
                                              :place_holder=>"e.g: Sr. Manager"} %>

      <!-- Responsibilities (text) -->
      <%= render :partial=>"field", :locals=>{:object=>@designation,
                                              :object_name=>'designation',
                                              :field_name=>'responsibilities',
                                              :display_name=>'Responsibilities',
                                              :field_type=>'text',
                                              :input_type=>'textarea',
                                              :required=>true,
                                              :place_holder=>"Enter the roles and responsibilities of this title."} %>

    </div>

  </div>

  <div class="modal-footer">

    <div class="pull-right">
      <% button_text = "#{@designation.new_record? ? "Create" : "Update"} Item" %>
			<%# if @designation.new_record? %>
				<%#= link_to "Cancel", "#", :class => "btn", :remote=>true %>
			<%# else %>
				<%#= link_to 'Back', admin_designations_path, :class=>"btn ml-10", :remote => true unless @designation.new_record? %>
			<%# end %>
      <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      <%= submit_tag button_text, "data-reset-text"=>button_text, "data-loading-text"=>"Saving ...", :class=>"btn btn-primary ml-10" %>
    </div>

  </div>

	<div class="cl-10"></div>

<% end %>

