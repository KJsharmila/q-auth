
<%# Displays list of @designations %>
<div id="div_designation_collections">
	<% @designations.each do |designation| %>
		<div id="div_designation_<%= designation.id %>">
			<%= render :partial=>"item", :locals=>{:designation=>designation} %>
		</div>
	<% end %>
	<% if @designations.blank? %>
		<div id="div_designation_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @designations.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @designations, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
