<%# describes about each designation %>
<div class="web-stats info clearfix" style="margin-bottom:5px;padding:5px;height:auto;">

    <div class="visible-md visible-lg pull-left mr-10" style="width:15%;">
      <%= display_image(designation, :picture, "50px") %>
    </div>
    <div class="pull-left" style="width:80%;">
      <%= link_to designation.title, admin_designation_path(designation), :remote=>true, :class=>"text-color-blue fs-14" %>
      <div class="text-color-gray fs-11"> <%= scrap_word(designation.responsibilities, 120) %></div>
    </div>

</div>


