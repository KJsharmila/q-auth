<%= flash_message if request.xhr? -%>

<div class="panel panel-default">
  <div class="panel-body" style="height:auto;">
    <div style="height:auto;">
      <div class="pull-left" style="width:30%;">
        <%
          redirect_url = admin_department_path(@department)
          change_picture_url = upload_image_link(@department, redirect_url, :picture)
        %>
        <%= theme_image(@department, redirect_url, :picture, "picture.image.url", change_picture_url: change_picture_url) %>
      </div>
      <div class="pull-left ml-10 text-color-gray" style="width:65%">
        <%= theme_panel_heading(@department.name) %>
        <%= theme_panel_description(@department.description) %>
      </div>
    </div>
  </div>

  <div class="panel-footer mt-20">
    <div class="clearfix fs-12 p-5">
      <%= theme_edit_button(edit_admin_department_path(@department)) %>
      <%= theme_delete_button(admin_department_path(@department)) %>
    </div>
  </div>

  <div class="cl"></div>
</div>

<%= theme_more_widget(@department,
          data_columns: [:id, :created_at, :updated_at, :button_text],
          super_admin: true) %>



