
<%# Displays list of @departments %>
<div id="div_department_collections">
	<% @departments.each do |department| %>
		<div id="div_department_<%= department.id %>">
			<%= render :partial=>"item", :locals=>{:department=>department} %>
		</div>
	<% end %>
	<% if @departments.blank? %>
		<div id="div_department_empty" class="box text-color-grey p-80 text-align-center" style="height:200px;">
      <%= translate("forms.no_results_found") %>
		</div>
	<% end %>
</div>
<div class="cl"></div>

<% if @departments.any? %>
   <%= content_tag :div, :class=>"pull-right" do %>
     <%= paginate @departments, :remote => true %>
   <% end %>
<% end %>
<div class="cl"></div>
