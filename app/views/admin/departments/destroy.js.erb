<% if @department %>
  <% if @department.new_record? %>

  	// Fill the right box with first department details
  	$('#div_department_details').html("<%= escape_javascript(render(:partial=>'summary')) %>");

  <% else %>

  	// Render the show partial to show flash message
  	$('#div_department_details').html("<%= escape_javascript(render(:partial=>'show')) %>");

  <% end %>

  // Render departments List
  $('#div_department_collections').html("<%= escape_javascript(render(:partial=>'index')) %>");

<% else %>

  var noResultsText = "<div id=\"div_admin_empty\" class=\"box text-color-grey p-80 text-align-center\" style=\"height:200px;\"><%= translate("forms.no_results_found") %></div>";
  $('#div_department_index').html(noResultsText);
  $('#div_department_details').html(noResultsText);

<% end %>
