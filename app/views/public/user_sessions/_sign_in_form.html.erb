<%
  redirect_back_url = params[:redirect_back_url] unless defined?(redirect_back_url)
%>
<%= form_tag create_user_session_path, :role=>"form", id: "form_sign_in", class: "m-30" do %>

  <%= hidden_field_tag :client_app, params[:client_app] if params[:client_app] %>
  <%= hidden_field_tag :redirect_back_url, redirect_back_url if redirect_back_url %>

  <div id="div_flash_message">
    <%= render :partial=>"/layouts/common/flash_message" -%>
  </div>

  <div class="form-group mt-10">
    <label for="sign_in_email">Email address</label>
    <%= text_field_tag :email, params[:email], :placeholder=> "Email", :name => "email", :class=>"form-control"%>
  </div>
  <div class="form-group">
    <label for="sign_in_password">Password</label>
    <%= password_field_tag :password, '', :placeholder=> "Password", :name => "password", :class=>"form-control"%>
  </div>

  <%= submit_tag "Sign in", :class => "btn btn-primary pull-right" %>
  <div class="cl-10"></div>

<% end %>


